@model SIMS_WEB_APDP.Models.Course

<style>
    .container{
        display: flex;
        flex-direction:column; 
        text-align:center;
        margin-top: 80px;
        background-color: grey;
        border-radius: 30px;
        width: 50%;
    }

    h2{
        
        font-weight: 700;
        color: black;
        font-size: 50px;
        
    }

    h3{
        font-size: 15px;
        margin-bottom: 30px;
    }

</style>

<div class="container">
    <div class="all_list">

         <h2>Delete Course</h2>
<h3>( Are you sure you want to delete this course? )</h3>
<div>
    <h4>@Model.courseName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Teacher Name</dt>
        <dd>@Model.teacherName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
    </div>
   
</div>
